{
  "$schema": "https://json.schemastore.org/package",
  "name": "shuffle-and-sync",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0 <21.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "NODE_ENV=development tsx server/index.ts",
    "build": "node build.js",
    "build:verify": "bash scripts/verify-build.sh",
    "build:verify-runtime": "tsx scripts/verify-runtime-init.js",
    "validate:markdown": "bash scripts/validate-markdown.sh",
    "validate:schema": "tsx scripts/validate-schema-fixes.ts",
    "prebuild": "bash scripts/pre-build.sh || true",
    "prepare": "husky || true",
    "start": "NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "db:init": "tsx scripts/init-sqlite-cloud-db.ts",
    "db:health": "tsx -e \"import { checkDatabaseHealth } from './shared/database-unified'; checkDatabaseHealth().then(console.log).catch(console.error)\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:load": "tsx scripts/load-test.ts",
    "test:stress": "tsx scripts/stress-test.ts",
    "test:performance:demo": "tsx scripts/performance-test-demo.ts",
    "lint": "./node_modules/.bin/eslint server client/src --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --log-level warn",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "test:generate": "tsx scripts/test-agent.ts",
    "test:auth": "jest server/tests/features/authentication.test.ts",
    "test:tournaments": "jest server/tests/features/tournaments.test.ts",
    "test:matchmaking": "jest server/tests/features/matchmaking.test.ts",
    "test:calendar": "jest server/tests/features/calendar.test.ts",
    "test:messaging": "jest server/tests/features/messaging.test.ts",
    "test:features": "jest server/tests/features/",
    "test:unit": "jest --testPathPattern=\".*\\.test\\.ts$\"",
    "test:coverage:features": "jest --coverage --collectCoverageFrom=\"server/features/**/*.ts\" --collectCoverageFrom=\"server/services/**/*.ts\"",
    "test:security": "jest server/tests/security/",
    "security:check": "npm audit --production && npm run test:security && npm run check",
    "security:audit": "npm test server/tests/security/security-audit-comprehensive.test.ts",
    "copilot:analyze": "tsx scripts/backend-copilot-cli.ts",
    "copilot:fix": "tsx scripts/backend-copilot-cli.ts --fix",
    "copilot:report": "tsx scripts/backend-copilot-cli.ts && echo 'Report generated: BACKEND_COPILOT_ANALYSIS.md'",
    "copilot:ci": "tsx scripts/backend-copilot-cli.ts && exit 0",
    "history:update": "tsx scripts/issue-pr-history-agent.ts",
    "env:validate": "tsx scripts/validate-env.ts",
    "env:help": "tsx scripts/validate-env.ts --help",
    "env:definitions": "tsx scripts/validate-env.ts --definitions",
    "env:setup": "cp .env.example .env.local && echo 'âœ… Created .env.local from template. Edit with your configuration and run: npm run env:validate'",
    "env:setup-full": "bash scripts/setup-env.sh",
    "admin:init": "tsx scripts/init-admin.ts",
    "admin:verify": "tsx scripts/init-admin.ts --verify",
    "deploy:production": "node scripts/deploy-production.mjs",
    "docker:test": "docker-compose -f docker-compose.production-test.yml up --build",
    "docker:test:down": "docker-compose -f docker-compose.production-test.yml down",
    "production:setup": "echo 'Copy .env.production.template to .env.production and configure values'",
    "db:backup": "tsx scripts/db-backup.ts",
    "db:backup:list": "ls -lh backups/ 2>/dev/null || echo 'No backups found'",
    "infrastructure:validate": "cd infrastructure/terraform && terraform validate",
    "infrastructure:plan": "cd infrastructure/terraform && terraform plan",
    "infrastructure:apply": "cd infrastructure/terraform && terraform apply"
  },
  "dependencies": {
    "@auth/core": "^0.40.0",
