# ==============================================
# TEST ENVIRONMENT VARIABLES
# ==============================================
# This file contains environment variables for the test suite.
# The AUTH_SECRET below is a cryptographically secure random token
# generated specifically for testing purposes.
#
# DO NOT use this secret in production or development environments.
# ==============================================

# Node Environment - Test Mode
NODE_ENV=test

# Authentication Secret - Cryptographically Secure Random Token
# Generated with: crypto.randomBytes(32).toString('hex')
# Length: 64 characters (hex encoding of 32 bytes)
# Meets all security requirements:
# - At least 32 characters long
# - Cryptographically random
# - No weak patterns (demo-, test-, example-, dev-)
# - Sufficient character variety
AUTH_SECRET=a3db27ad60e7b8052ad2f29bca377624560468d538c90f7688e4f45025632bd3

# Database URL - Test Database (in-memory SQLite)
# Using in-memory database for isolated test runs
DATABASE_URL=:memory:

# Application Base URL - Test Environment
# Not required for unit tests but provided for completeness
AUTH_URL=http://localhost:3000

# Trust host header for Auth.js in test environment
AUTH_TRUST_HOST=true

# Google OAuth Credentials - Test Mode
# These are placeholder values for testing
# Tests that need OAuth should mock these appropriately
GOOGLE_CLIENT_ID=test-google-client-id
GOOGLE_CLIENT_SECRET=test-google-client-secret

# Log Level - Minimal for tests (reduces noise)
LOG_LEVEL=error

# Disable telemetry during tests
NEXT_TELEMETRY_DISABLED=1
