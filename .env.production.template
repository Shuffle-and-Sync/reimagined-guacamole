# Production Environment Variables Template
# Copy this file to .env.production and fill in the values

# === CRITICAL PRODUCTION VARIABLES ===
# These are required for the application to start

# Database connection (Cloud SQL)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Authentication secrets
AUTH_SECRET=your-secure-64-character-secret-key-here-replace-with-random
AUTH_URL=https://your-production-domain.com

# Google OAuth credentials
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# === PLATFORM-MANAGED VARIABLES ===
# These are set automatically by Cloud Run

# Application port (set by Cloud Run)
PORT=8080

# Environment
NODE_ENV=production

# === OPTIONAL SERVICES ===
# These enhance functionality but are not required

# Email service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# Stream encryption (32 characters)
STREAM_KEY_ENCRYPTION_KEY=your-32-character-encryption-key

# === MONITORING & LOGGING ===
# Optional but recommended for production

# Redis for caching (optional)
REDIS_URL=redis://username:password@host:port

# Application insights
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# === THIRD-PARTY INTEGRATIONS ===
# Required for streaming platform features

# Twitch API (optional)
TWITCH_CLIENT_ID=your-twitch-client-id
TWITCH_CLIENT_SECRET=your-twitch-client-secret

# YouTube API (optional)
YOUTUBE_API_KEY=your-youtube-api-key

# === SECURITY SETTINGS ===
# Additional security configurations

# CORS origins (comma-separated)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session configuration
SESSION_SECRET=your-session-secret-different-from-auth-secret
SESSION_MAX_AGE=604800000